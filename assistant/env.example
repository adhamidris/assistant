# AI Personal Business Assistant - Environment Configuration Example
# Copy this file to .env and fill in your actual values
# NEVER commit the actual .env file with real API keys!

# =============================================================================
# DJANGO CONFIGURATION
# =============================================================================
SECRET_KEY=your-django-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DB_NAME=assistant_db
DB_USER=postgres
DB_PASSWORD=your-database-password
DB_HOST=localhost
DB_PORT=5432

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# FILE STORAGE (MINIO/S3)
# =============================================================================
S3_ACCESS_KEY=your-s3-access-key
S3_SECRET_KEY=your-s3-secret-key
S3_BUCKET_NAME=assistant-files
S3_ENDPOINT_URL=http://localhost:9000
S3_USE_SSL=False
S3_REGION=us-east-1

# =============================================================================
# AI SERVICES
# =============================================================================
OPENAI_API_KEY=your-openai-api-key
DEEPSEEK_API_KEY=your-deepseek-api-key
AI_PROVIDER=deepseek

# =============================================================================
# GOOGLE CALENDAR INTEGRATION
# =============================================================================
GOOGLE_OAUTH_CLIENT_ID=your-google-client-id
GOOGLE_OAUTH_CLIENT_SECRET=your-google-client-secret

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
NEXT_PUBLIC_API_BASE=http://localhost:8000

# =============================================================================
# SECURITY NOTES
# =============================================================================
# 1. Never commit this file with real API keys
# 2. Keep your .env file secure and never share it
# 3. Rotate API keys regularly
# 4. Use environment-specific files (.env.development, .env.production)
